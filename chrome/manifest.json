{
	"name":				"Macaw",
	"description":		"An open source twitter client",
	"version":			"0.0.3",
	"manifest_version":	2,
	"offline_enabled":	false,

	"icons": {
		"512":			"icon512.png",
		"256":			"icon256.png",
		"128":			"icon128.png",
		"64":			"icon64.png",
		"32":			"icon32.png",
		"48":			"icon48.png",
		"24":			"icon24.png",
		"16":			"icon16.png"
	},

	"app": {
		"background": {
			"scripts": [ "chrome.js" ]
		}
	},

	"permissions": [
		"*://*/*",

		"webview",
		"geolocation",
		"storage",
		"notifications",
		"clipboardRead",
		"clipboardWrite",
		"app.window"
	]
}

